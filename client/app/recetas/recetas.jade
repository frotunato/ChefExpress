style.
  .clickable {
    cursor: pointer;
  }

table(class="table table-striped table-condensed table-bordered table-hover")
  thead
    tr
      
      th(class="text-center col-md-3")
        p
          a(href="" ng-click="sort('nombre')") Nombre
        input(type="text" placeholder="Introduce un nombre para filtrar" ng-change="filter()" class="form-control input-md" ng-model="filtering.nombre" ng-model-options="{debounce: 100}")
      
      th(class="text-center col-md-2")
        p
          a(href="" ng-click="sort('familia')") Familia
        select(class="form-control input-sm" ng-change="filter()" ng-options="familia for familia in familias" ng-model="filtering.familia")
          option(selected value="") Todas
      
      th(class="text-center")
        p
          a(href="" ng-click="sort('categoria')") Categoria
        select(class="form-control input-sm" ng-change="filter()" ng-options="categoria for categoria in categorias" ng-model="filtering.categoria")
          option(selected value="") Todas

      th(class="text-center")
        p
          a(href="" ng-click="sort('precio')") Precio
      
      th(class="text-center")
        p
          a(href="" ng-click="sort('ambito')") √Åmbito
        select(class="form-control input-sm" ng-change="filter()" ng-options="ambito for ambito in ambitos" ng-model="filtering.ambito")
          option(selected value="") Todos

      th(class="text-center")
        p
          a(href="" ng-click="sort('procedencia')") Procedencia
        select(class="form-control input-sm" ng-change="filter()" ng-options="procedencia for procedencia in procedencias" ng-model="filtering.procedencia")
          option(selected value="") Todas

      th(class="text-center")
        p
          a(href="" ng-click="sort('tipo')") Tipo
        select(class="form-control input-sm" ng-change="filter()" ng-options="tipo for tipo in tipos" ng-model="filtering.tipo")
          option(selected value="") Todos

  tbody
    tr(class="clickable" ng-click="load(receta._id)" dir-paginate="receta in recetas | itemsPerPage: max" total-items="total")
      td {{::receta.nombre}}
      td {{::receta.familia.nombre}}
      td {{::receta.categoria.nombre}}
      td {{::receta.precio}}
      td {{::receta.ambito.nombre}}
      td {{::receta.procedencia.nombre}}
      td {{::receta.tipo.nombre}}

dir-pagination-controls(on-page-change="pageChanged(newPageNumber)")
