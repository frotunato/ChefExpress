style.
  .clickable {
    cursor: pointer;
  }

table(class="table table-striped table-condensed table-bordered table-hover")
  thead
    tr
      
      th(class="text-center col-md-3")
        p
          a(href="" ng-click="sort('nombre')") Nombre
        input(type="text" placeholder="Introduce un nombre para filtrar" ng-change="table.filtering.filter()" class="form-control input-md" ng-model="table.filtering.nombre" ng-model-options="{debounce: 100}")
      
      th(class="text-center col-md-2")
        p
          a(href="" ng-click="sort('familia')") Familia
        select(class="form-control" ng-change="table.filtering.filter()" ng-options="familia as familia.nombre for familia in data.familias" ng-model="table.filtering.familia")
          option(selected value="") Todas
      
      th(class="text-center")
        p
          a(href="" ng-click="sort('categoria')") Categoria
        select(class="form-control" ng-change="table.filtering.filter()" ng-options="categoria as categoria.nombre for categoria in data.categorias" ng-model="table.filtering.categoria")
          option(selected value="") Todas

      th(class="text-center")
        p
          a(href="" ng-click="sort('precio')") Precio
      
      th(class="text-center")
        p
          a(href="" ng-click="sort('ambito')") √Åmbito
        select(class="form-control" ng-change="table.filtering.filter()" ng-options="ambito as ambito.nombre for ambito in data.ambitos" ng-model="table.filtering.ambito")
          option(selected value="") Todos

      th(class="text-center")
        p
          a(href="" ng-click="sort('procedencia')") Procedencia
        select(class="form-control" ng-change="table.filtering.filter()" ng-options="procedencia as procedencia.nombre for procedencia in data.procedencias" ng-model="table.filtering.procedencia")
          option(selected value="") Todas

      th(class="text-center")
        p
          a(href="" ng-click="sort('tipo')") Tipo
        select(class="form-control" ng-change="table.filtering.filter()" ng-options="tipo as tipo.nombre for tipo in data.tipos" ng-model="table.filtering.tipo")
          option(selected value="") Todos

  tbody
    tr(class="clickable" ng-click="load(receta._id)" dir-paginate="receta in data.recetas | itemsPerPage: table.pagination.max" total-items="data.totalRecetas")
      td {{::receta.nombre}}
      td {{::receta.familia.nombre}}
      td {{::receta.categoria.nombre}}
      td {{::receta.precio}}
      td {{::receta.ambito.nombre}}
      td {{::receta.procedencia.nombre}}
      td {{::receta.tipo.nombre}}

dir-pagination-controls(on-page-change="table.pagination.getResultsPage(newPageNumber)")