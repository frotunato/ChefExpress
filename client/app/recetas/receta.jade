
div(id="tableContainer")
  table(class="table table-striped table-condensed table-bordered")
    thead
      tr
        th(class="text-center" colspan="6") 
          h4(ng-if="!receta.$editNombre" ng-click="receta.$editNombre = true") {{receta.nombre}}
          div(ng-if="receta.$editNombre" class="form-control")
            input(focus type="text" ng-model="receta.nombre" class="form-control text-center input-sm" ng-blur="receta.$editNombre = false")
      th Ingredientes
      th Cantidad
      th %
      th Unidad
      th Precio
      th Total
    tbody
      tr(ng-repeat="ingredienteReceta in ingredientesReceta")
        td {{ingredienteReceta.nombre}}
        td {{ingredienteReceta.cantidad}}
        td %
        td Unidad
        td {{ingredienteReceta.precio}}
        td total
div(id="searchContainer")
  table(class=" table-striped table-condensed")
    thead
      tr
        th
          p Nombre
          input(type="text" placeholder="Introduce un nombre para filtrar" ng-change="filter()" class="form-control input-sm" ng-model="filtering.nombre" ng-model-options="{debounce: 150}")
        th 
          p Familia
        th 
          p Estado
        th 
          p Precio

    tbody
      tr(ng-click="add(ingrediente)" dir-paginate="ingrediente in ingredientes | itemsPerPage: max" total-items="total")
        td {{ingrediente.nombre}}
        td {{ingrediente.familia}}
        td {{ingrediente.estado}}
        td {{ingrediente.precio}}
  
  dir-pagination-controls(on-page-change="pageChanged(newPageNumber)")