style.
  .clickable {
    cursor: pointer;
  }
  .dropdown-menu{
    cursor:pointer;
  }
div(class="row")
  div(id="tableContainer" class="col-md-10")
    table(class="table table-striped table-condensed table-bordered table-hover")
      thead
        tr
          th(class="text-center" colspan="6") 
            b
              h4(ng-if="!receta.$editNombre" ng-click="receta.$editNombre = true") {{receta.nombre}}
            div(ng-if="receta.$editNombre")
              input(focus type="text" ng-model="receta.nombre" class="form-control text-center input-lg" ng-blur="receta.$editNombre = false; actualizarReceta($parent.receta._id, {nombre: receta.nombre})")
        th Ingredientes
        th Cantidad
        th %
        th Unidad
        th Precio
        th Total
      tbody
        tr(ng-repeat="ingredienteReceta in receta.ingredientes track by $index" )
          td {{ingredienteReceta.nombre}}
          td(ng-click="ingredienteReceta.$editCantidad = true")
            span(ng-if="!ingredienteReceta.$editCantidad" ng-bind="ingredienteReceta.cantidad")
            div(ng-if="ingredienteReceta.$editCantidad")
              input(focus ng-blur="ingredienteReceta.$editCantidad = false;" class="form-control input-sm" type="number" ng-model="ingredienteReceta.cantidad")
          td {{ingredienteReceta.precio*2}}
          td Unidad
          td {{ingredienteReceta.precio}}
          td total
div(class="row")
  div(id="searchContainer" class="col-md-4")
