style.
  .clickable {
    cursor: pointer;
  }
  .dropdown-menu{
    cursor:pointer;
  }
div(class="row")
  div(id="tableContainer" class="col-md-10")
    table(class="table table-striped table-condensed table-bordered")
      thead
        tr
          th(class="text-center" colspan="6") 
            b
              h4(ng-if="!receta.$editNombre" ng-click="receta.$editNombre = true") {{receta.nombre}}
            div(ng-if="receta.$editNombre")
              input(focus type="text" ng-model="receta.nombre" class="form-control text-center input-lg" ng-blur="receta.$editNombre = false; actualizarReceta($parent.receta._id, {field: {nombre: receta.nombre}})")
        th(class="text-center col-md-6") Ingredientes
        th(class="text-center col-md-1") Cantidad
        th(class="text-center col-sm-1") %
        th(class="text-center col-md-1") Unidad
        th(class="text-center col-md-1") Precio
        th(class="text-center col-md-1") Total
      tbody
        tr(ng-repeat="ingredienteReceta in receta.ingredientes track by $index" )
          td {{ingredienteReceta.ingrediente.nombre}}
          td(ng-click="ingredienteReceta.$editCantidad = true")
            span(ng-if="!ingredienteReceta.$editCantidad" ng-bind="ingredienteReceta.cantidad")
            div(ng-if="ingredienteReceta.$editCantidad")
              input(focus ng-blur="ingredienteReceta.$editCantidad = false; actualizarReceta($parent.receta._id, {field: {cantidad: ingredienteReceta.cantidad}, ingrediente: ingredienteReceta.ingrediente._id})" class="form-control input-sm" type="number" ng-model="ingredienteReceta.cantidad")
          td {{ingredienteReceta.precio*2}}
          td Unidad
          td {{ingredienteReceta.precio}}
          td total
div(class="row")
  div(id="searchContainer" class="col-md-2")
