				button(type="button" ng-click="showIngredientesModal(ingrediente['_id'])" class="btn btn-default") Editar
			td
				button(type="button" ng-click="borrarIngrediente(ingrediente)" class="btn btn-sm btn-danger")
					i(class="glyphicon glyphicon-remove-circle")
