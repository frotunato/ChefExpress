div(id="modalWrapper")
  div(class="modal-header")
    h3(class="modal-title") Nuevo ingrediente
  div(class="modal-body")
    form(id="nuevoIngredienteForm" ng-submit="ok()" class="form-horizontal")
      
      div(class="form-group")
        label(for="nombreNuevoIngrediente" class="col-sm-2 control-label") Nombre
        div(class="col-sm-10")
          input(required id="nombreNuevoIngrediente" ng-model="ingrediente.nombre" class="form-control input-sm" type="text")
      
      div(class="form-group")
        label(for="familiaNuevoIngrediente" class="col-sm-2 control-label") Familia
        div(class="col-sm-10")
          select(required id="familiaNuevoIngrediente" class="form-control input-sm" ng-options="familia.nombre for familia in familias" ng-model="ingrediente.familia")
            option(value="") -- Selecciona una familia --
      div(class="form-group")  
        label(for="precioNuevoIngrediente" class="col-sm-2 control-label") Precio
        div(class="col-sm-10")
          input(required id="precioNuevoIngrediente" class="form-control input-sm" min="0" max="10000" type="number" ng-model="ingrediente.precio")
        
      div(class="form-group")  
        label(for="caloriasNuevoIngrediente" class="col-sm-2 control-label") Calorias
        div(class="col-sm-10")
          input(required id="caloriasNuevoIngrediente" class="form-control input-sm" min="0" max="10000" type="number" ng-model="ingrediente.composicion.calorias")
      
      div(class="form-group")  
        label(for="proteinasNuevoIngrediente" class="col-sm-2 control-label") Proteinas
        div(class="col-sm-10")
          input(required id="proteinasNuevoIngrediente" class="form-control input-sm" min="0" max="10000" type="number" ng-model="ingrediente.composicion.proteinas")
      
      div(class="form-group")  
        label(for="carbohidratosNuevoIngrediente" class="col-sm-2 control-label") Carbohidratos
        div(class="col-sm-10")
          input(required id="carbohidratosNuevoIngrediente" class="form-control input-sm" min="0" max="10000" type="number" ng-model="ingrediente.composicion.carbohidratos")
      
      div(class="form-group")  
        label(for="grasasNuevoIngrediente" class="col-sm-2 control-label") Grasas
        div(class="col-sm-10")
          input(required id="grasasNuevoIngrediente" class="form-control input-sm" min="0" max="10000" type="number" ng-model="ingrediente.composicion.grasas")
     
      div(class="form-group")
        label(for="alergenoNuevoIngrediente" class="col-sm-2 control-label") Alérgeno
        div(class="col-sm-10")
          select(required id="alergenoNuevoIngrediente" class="form-control input-sm" ng-options="alergeno.nombre for alergeno in alergenos" ng-model="ingrediente.alergeno")
            option(value="") -- Selecciona un alérgeno --

    div(class="modal-footer")
      input(class="btn btn-primary" form="nuevoIngredienteForm" type="submit" value="Aceptar")
      button(class="btn btn-warning" ng-click="cancel()") Cancelar