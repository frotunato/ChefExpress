div(id="wrapper" class="popup")
  h2 ChefExpress
  form(ng-submit="login()" role="form")
    p
      input(required class="input-sm" placeholder="Usuario" id="usuario" type="text" ng-model="credenciales.usuario")
    p
      input(required class="input-sm" placeholder="Contraseña" id="contraseña" type="password" ng-model="credenciales.password")
    input(type="submit" class="btn btn-primary" style="width:100%" placeholder="Entrar")